<%- include('../partials/header'); %>

<div class="constrained-full-height">

    <div id="page-login">

        <div class="container">

            <div class="row gx-5">

                <!-- <div class="col">
                    <img src="/Travel-Diary-login.png" class="bg-section constrained-full-height"> 
                </div> -->

                <div class="col">
                    
                    <div class="content-section">
                        <div class="text-center mt-5">
                            <h1 class="mb-3">Login</h1>
                            <div class="hr"></div>
                        </div>

                        <form id="login-form" class="mt-5" method="POST" action="/pages/login">

                            <ul class="error-msgs"></ul>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password">
                            </div>

                            <div class="success-msg"></div>
                
                            <div class="mb-3 text-center">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>

                        </form>

                        <div class="container d-flex justify-content-evenly">
                            <a class="btn btn-primary" href="https://travel-diary-mo.herokuapp.com/pages/register" role="button">Register here!</a>
                        </div>
                    </div>  

                </div>

            </div>

        </div>

    </div>

</main>

